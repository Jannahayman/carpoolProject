<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="4dp"
    android:theme="@style/Theme.Material3.Dark.NoActionBar">


    <TextView
        android:id="@+id/tv_pickup_item_ar_fragment_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/view_arrow_item_ar_fragment_home"
        android:contentDescription="arrow"
        android:src="@drawable/arrow_forward"

        app:layout_constraintBottom_toBottomOf="@id/tv_pickup_item_ar_fragment_home"
        app:layout_constraintEnd_toStartOf="@id/tv_drop_off_item_ar_fragment_home"
        app:layout_constraintStart_toEndOf="@id/tv_pickup_item_ar_fragment_home"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ar_fragment_home"
        android:layout_height="25dp"
        android:layout_width="40dp"/>

    <TextView
        android:id="@+id/tv_drop_off_item_ar_fragment_home"
        app:layout_constraintStart_toEndOf="@id/view_arrow_item_ar_fragment_home"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ar_fragment_home"
        app:layout_constraintBottom_toBottomOf="@id/tv_pickup_item_ar_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_date_item_ar_fragment_home"
        app:layout_constraintStart_toStartOf="@id/tv_pickup_item_ar_fragment_home"
        app:layout_constraintTop_toBottomOf="@id/tv_pickup_item_ar_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="21 Jul - 5:30 PM"/>

    <TextView
        android:id="@+id/tv_price_item_ar_fragment_home"
        app:layout_constraintStart_toStartOf="@id/tv_date_item_ar_fragment_home"
        app:layout_constraintTop_toBottomOf="@id/tv_date_item_ar_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="44.00 EGP"/>
    <TextView
        android:id="@+id/tv_available_seats"
        app:layout_constraintStart_toStartOf="@id/tv_date_item_ar_fragment_home"
        app:layout_constraintTop_toBottomOf="@id/tv_price_item_ar_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="44.00 EGP"/>

    <Space
        android:id="@+id/view_space_item_ar_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ar_fragment_home"
        app:layout_constraintBottom_toBottomOf="@id/tv_price_item_ar_fragment_home"
        app:layout_constraintStart_toEndOf="@id/tv_drop_off_item_ar_fragment_home"
        app:layout_constraintEnd_toStartOf="@id/button_book_now_item_ar_fragment_home"/>

    <Button
        android:id="@+id/button_book_now_item_ar_fragment_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_space_item_ar_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="@color/white"
        android:gravity="top"
        android:textSize="18sp"
        android:text="@string/book_now"/>


</androidx.constraintlayout.widget.ConstraintLayout>